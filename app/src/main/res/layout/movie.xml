<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:text="@string/movie_title_sample"
        android:textColor="@color/semi_white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMovieYear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/bree_serif"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="@string/movie_year_sample"
            android:textColor="@color/semi_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtMovieGenre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/bree_serif"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="@string/movie_genre_sample"
            android:textColor="@color/semi_white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>